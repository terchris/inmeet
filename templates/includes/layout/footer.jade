//- SITE FOOTER
footer.site-footer.site-footer--sticky: .container
	.row
		.col-sm-4
			h5.footer-heading About
			p #{inme_about_txt}  
			ul.list-inline
				li: a(href='/about') More about #{brand}
				li: a(href='mailto:#{from_email}') Contact us

		.col-sm-8
			.row
				.col-xs-4
					h5.footer-heading Members
					ul
						li: a(href='/members') Members
						li: a(href='/mentoring') Mentoring
						li: a(href='/members/mentors') Mentors
						if !user
							li: a(href='/join').js-auth-trigger Become a Member
				.col-xs-4
					h5.footer-heading Resources
					ul
						li: a(href='/organisations') Organisations
						li: a(href='/links') Links
						li: a(href='/blog') Blog

				.col-xs-4
					h5.footer-heading Sponsors
					ul: each sponsor in sponsors
						li: a(href='/organisations#' + sponsor.id)= sponsor.name
	.row.footer-copyright
		p Copyright &copy; 2014 #{brand}. Powered by <a href='http://keystonejs.com', target='_blank'>KeystoneJS</a>.
		p If you run a meetup, please feel free to clone our site and make your own! We forked it from www.SydJS.com and extended it. You can fork our site <a href="https://github.com/terchris/inmeet", target='_blank'>find it on GitHub</a>.
